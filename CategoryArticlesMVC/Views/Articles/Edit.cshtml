@model MyWebFormApp.BLL.DTOs.ArticleDTO

@{
    var categories = (List<CategoryDTO>)ViewBag.Categories;
}

<div class="row">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Add Article</h1>
    </div>

    <div class="col-lg-12">
        <!-- Basic Card Example -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Add Articles</h6>
            </div>
            <div class="card-body">
                @Html.Raw(ViewBag.Message)
                <form asp-action="Edit" class="form" enctype="multipart/form-data">
                    <div class="form-group">
                        <label for="CategoryID">Category : </label>
                        <select name="CategoryID" class="form-control">
                            @foreach (var category in categories)
                            {
                                if (category.CategoryID == Model.CategoryID)
                                {
                                    <option value="@category.CategoryID" selected="selected">@category.CategoryName</option>
                                }
                                else
                                {
                                    <option value="@category.CategoryID">@category.CategoryName</option>
                                }
                            }
                        </select>
                    </div>
                    
                    <input type="hidden" name="CategoryID" value="@Model.CategoryID" />
                    <div class="form-group">
                        <label for="Title">Title</label>
                        <input type="text" name="Title" value="@Model.Title" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label for="Details">Details</label>
                        <textarea name="Details" class="form-control" placeholder="Insert Details">@Model.Details</textarea>
                    </div>
                    <div class="form-group form-inline">
                        <input type="checkbox" checked="@Model.IsApproved" asp-for="IsApproved" class="form-check-input" />
                        &nbsp;
                        IsApproved
                    </div>
                    <input type="hidden" name="PicHidden" value="@Model.Pic" />
                    <div class="form-group">
                        <label for="Pic">Picture</label>
                        <input type="file" class="form-control" name="Pic"/>
                    </div>

                    <input type="submit" value="Submit" class="btn btn-primary" />
                </form>
            </div>
        </div>

    </div>

</div>